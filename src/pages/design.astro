          <!-- Book Cover Design -->
          <div>
            <h3 class="mb-6 text-xl font-semibold text-stone-800 dark:text-stone-200">
              Book Cover
            </h3>
            {
              bookCovers.map((item) => (
                <div class="rounded-xl border border-stone-300/50 bg-stone-100/50 p-6 dark:border-stone-700/50 dark:bg-stone-800/50 md:p-8">
