---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-12">
        <section>
          <article class="space-y-8">
            <div class="animate">
              <p class="text-lg leading-relaxed text-stone-700 dark:text-stone-300">
                Multi-disciplinary creator based in California.
              </p>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 animate">
              <a
                href="https://plasticjaguar.com"
                target="_blank"
                rel="noopener noreferrer"
                class="group flex flex-col items-center gap-3 transition-transform duration-300 hover:scale-105"
              >
                <div class="w-24 h-24 md:w-32 md:h-32 flex items-center justify-center">
                  <img
                    src="/plastic-jaguar-logo.png"
                    alt="Plastic Jaguar"
                    class="w-full h-full object-contain rounded-lg shadow-md group-hover:shadow-xl transition-shadow"
                  />
                </div>
                <span class="text-sm md:text-base font-medium text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors">Music</span>
              </a>

              <a
                href="https://rocketboogie.com"
                target="_blank"
                rel="noopener noreferrer"
                class="group flex flex-col items-center gap-3 transition-transform duration-300 hover:scale-105"
              >
                <div class="w-24 h-24 md:w-32 md:h-32 flex items-center justify-center">
                  <img
                    src="/rbc-logo.png"
                    alt="Rocket Boogie Co."
                    class="w-full h-full object-contain rounded-lg shadow-md group-hover:shadow-xl transition-shadow"
                  />
                </div>
                <span class="text-sm md:text-base font-medium text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors">Stationery</span>
              </a>

              <a
                href="https://cargocollective.com/scottdavidlingner/Scott-Lingner"
                target="_blank"
                rel="noopener noreferrer"
                class="group flex flex-col items-center gap-3 transition-transform duration-300 hover:scale-105"
              >
                <div class="w-24 h-24 md:w-32 md:h-32 flex items-center justify-center">
                  <img
                    src="/atown.jpg"
                    alt="Photography"
                    class="w-full h-full object-cover rounded-lg shadow-md group-hover:shadow-xl transition-shadow"
                  />
                </div>
                <span class="text-sm md:text-base font-medium text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors">Photo</span>
              </a>

              <a
                href="/software-engineering"
                class="group flex flex-col items-center gap-3 transition-transform duration-300 hover:scale-105"
              >
                <div class="w-24 h-24 md:w-32 md:h-32 rounded-lg bg-stone-700 dark:bg-stone-600 flex items-center justify-center shadow-md group-hover:shadow-xl transition-shadow">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 md:w-16 md:h-16 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </div>
                <span class="text-sm md:text-base font-medium text-stone-700 dark:text-stone-300 group-hover:text-amber-700 dark:group-hover:text-amber-400 transition-colors">Software</span>
              </a>
            </div>

            <section class="animate space-y-4 mt-12">
              <h2 class="text-2xl font-bold text-stone-900 dark:text-stone-100 mb-4">
                Connect
              </h2>
              <div class="bg-stone-200/50 dark:bg-stone-800/50 p-6 rounded-lg border border-stone-300/50 dark:border-stone-700/50">
                <p class="text-base leading-relaxed text-stone-700 dark:text-stone-300">
                  Get in touch about creative work or collaborative opportunities.
                </p>
              </div>
              <ul class="not-prose flex flex-wrap gap-2">
                {
                  SOCIALS.map((SOCIAL) => (
                    <li class="flex gap-x-2 text-nowrap pb-4">
                      <Link
                        href={SOCIAL.HREF}
                        external
                        aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                      >
                        {SOCIAL.NAME}
                      </Link>
                      {"/"}
                    </li>
                  ))
                }
                <li class="line-clamp-1">
                  <Link
                    href={`mailto:${SITE.EMAIL}`}
                    aria-label={`Email ${SITE.TITLE}`}
                  >
                    {SITE.EMAIL}
                  </Link>
                </li>
                {"/"}
                <li class="line-clamp-1">
                  <Link href="/rss.xml" aria-label="Scott Lingner RSS feed">
                    RSS
                  </Link>
                </li>
              </ul>
            </section>
          </article>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
