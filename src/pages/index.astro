---
import { SITE, HOME } from "@consts";

// Array of background photos that rotate
const photos = [
  "/atown.jpg",
  "/guitar-1.webp",
  "/pigeon-4.jpg",
];

// Pick a random photo on each page load
const randomPhoto = photos[Math.floor(Math.random() * photos.length)];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{SITE.TITLE}</title>
    <meta name="description" content={HOME.DESCRIPTION} />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        overflow: hidden;
        height: 100vh;
      }

      .landing-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding-left: 4rem;
      }

      .background-image {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.6) grayscale(20%);
      }

      .content {
        position: relative;
        z-index: 10;
        max-width: 600px;
        width: 100%;
      }

      .header {
        text-align: left;
        margin-bottom: 3rem;
        animation: fadeInDown 1s ease-out;
      }

      .title {
        font-size: clamp(2.5rem, 8vw, 5rem);
        font-weight: 700;
        color: white;
        margin-bottom: 1rem;
        text-shadow: 0 4px 12px rgba(0, 0, 0, 0.5);
        letter-spacing: -0.02em;
        text-align: left;
      }

      .subtitle {
        font-size: clamp(1rem, 2vw, 1.25rem);
        color: rgba(255, 255, 255, 0.9);
        font-weight: 300;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
        text-align: left;
      }

      .nav-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .category-link {
        display: block;
        text-decoration: none;
        color: white;
        font-size: clamp(2rem, 4vw, 3.5rem);
        font-weight: 700;
        letter-spacing: 0.02em;
        text-transform: uppercase;
        transition: all 0.3s ease;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
        animation: fadeInUp 1s ease-out;
        animation-fill-mode: both;
        text-align: left;
        line-height: 1.2;
      }

      .category-link:nth-child(1) { animation-delay: 0.1s; }
      .category-link:nth-child(2) { animation-delay: 0.2s; }
      .category-link:nth-child(3) { animation-delay: 0.3s; }
      .category-link:nth-child(4) { animation-delay: 0.4s; }
      .category-link:nth-child(5) { animation-delay: 0.5s; }

      .category-link:hover {
        transform: translateX(10px);
        text-shadow: 0 4px 16px rgba(0, 0, 0, 0.7);
      }

      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @media (max-width: 768px) {
        .landing-container {
          padding-left: 2rem;
          padding-right: 2rem;
        }

        .category-link {
          font-size: clamp(1.5rem, 6vw, 2.5rem);
        }
      }
    </style>
  </head>
  <body>
    <div class="landing-container">
      <img
        src={randomPhoto}
        alt="Background"
        class="background-image"
      />

      <div class="content">
        <div class="header">
          <h1 class="title">Scott Lingner</h1>
          <p class="subtitle">Multi-disciplinary creator based in California</p>
        </div>

        <nav class="nav-list">
          <a href="/music" class="category-link">
            Music
          </a>
          <a href="/stationery" class="category-link">
            Stationery
          </a>
          <a href="/photo" class="category-link">
            Photography
          </a>
          <a href="/software-engineering" class="category-link">
            Software
          </a>
          <a href="/home" class="category-link">
            All Work
          </a>
        </nav>
      </div>
    </div>
  </body>
</html>
