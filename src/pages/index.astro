---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";

const newsItems = (await getCollection("news"))
  .filter((item) => !item.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 4);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <!-- Hero Banner -->
  <section
    class="relative flex min-h-[60vh] items-center justify-center overflow-hidden md:min-h-[70vh]"
  >
    <div
      class="absolute inset-0 bg-gradient-to-br from-stone-900 via-stone-800 to-stone-900 dark:from-black dark:via-stone-900 dark:to-black"
    ></div>
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute inset-0"
        style="background-image: url('/atown.jpg'); background-size: cover; background-position: center; filter: blur(8px) grayscale(100%);"
      ></div>
    </div>
    <div class="animate relative z-10 mx-auto max-w-5xl px-6 text-center">
      <h1
        class="mb-6 text-5xl font-bold tracking-tight text-white md:text-7xl lg:text-8xl"
      >
        Scott Lingner
      </h1>
      <p
        class="mb-8 text-xl font-light text-stone-300 md:text-2xl lg:text-3xl"
      >
        Multi-disciplinary creator based in California
      </p>
      <p
        class="mx-auto max-w-2xl text-base leading-relaxed text-stone-400 md:text-lg"
      >
        Software engineer, musician, illustrator, and photographer exploring the
        intersection of technology and art.
      </p>
    </div>
    <div
      class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-stone-50 to-transparent dark:from-stone-950"
    ></div>
  </section>

  <!-- Work Categories - Magazine Style Banners -->
  <section class="py-16 md:py-24">
    <Container>
      <div class="animate mb-12">
        <h2
          class="mb-4 text-4xl font-bold text-stone-900 dark:text-stone-100 md:text-5xl"
        >
          Creative Work
        </h2>
        <div class="h-1 w-20 bg-stone-900 dark:bg-stone-100"></div>
      </div>

      <div class="animate grid grid-cols-1 gap-6 md:grid-cols-2 md:gap-8">
        <!-- Music Banner -->
        <a
          href="/music"
          class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-xl transition-all duration-500 hover:shadow-2xl"
        >
          <div
            class="absolute inset-0 bg-gradient-to-br from-purple-900 to-indigo-900"
          ></div>
          <div
            class="absolute inset-0 bg-black/40 transition-all duration-500 group-hover:bg-black/20"
          ></div>
          <div
            class="absolute inset-0 opacity-30 transition-all duration-500 group-hover:opacity-20"
          >
            <img
              src="/plastic-jaguar-logo.png"
              alt="Music"
              class="h-full w-full object-cover grayscale"
            />
          </div>
          <div class="absolute inset-0 flex flex-col justify-end p-8 md:p-10">
            <span class="mb-2 font-mono text-sm text-white/60 md:text-base"
              >01</span
            >
            <h3
              class="mb-3 text-3xl font-bold text-white transition-transform duration-300 group-hover:translate-x-2 md:text-4xl"
            >
              Music
            </h3>
            <p class="max-w-md text-sm text-white/80 md:text-base">
              Experimental sounds and homemade instruments featured on CNET and
              BOOOOOOOM
            </p>
          </div>
        </a>

        <!-- Stationery Banner -->
        <a
          href="/stationery"
          class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-xl transition-all duration-500 hover:shadow-2xl"
        >
          <div
            class="absolute inset-0 bg-gradient-to-br from-amber-800 to-orange-900"
          ></div>
          <div
            class="absolute inset-0 bg-black/40 transition-all duration-500 group-hover:bg-black/20"
          ></div>
          <div
            class="absolute inset-0 opacity-30 transition-all duration-500 group-hover:opacity-20"
          >
            <img
              src="/rbc-logo.png"
              alt="Stationery"
              class="h-full w-full object-cover grayscale"
            />
          </div>
          <div class="absolute inset-0 flex flex-col justify-end p-8 md:p-10">
            <span class="mb-2 font-mono text-sm text-white/60 md:text-base"
              >02</span
            >
            <h3
              class="mb-3 text-3xl font-bold text-white transition-transform duration-300 group-hover:translate-x-2 md:text-4xl"
            >
              Stationery
            </h3>
            <p class="max-w-md text-sm text-white/80 md:text-base">
              Rocket Boogie Co. – Custom illustrated greeting cards and prints
            </p>
          </div>
        </a>

        <!-- Photo Banner -->
        <a
          href="/photo"
          class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-xl transition-all duration-500 hover:shadow-2xl"
        >
          <div
            class="absolute inset-0 bg-gradient-to-br from-slate-800 to-slate-900"
          ></div>
          <div
            class="absolute inset-0 bg-black/30 transition-all duration-500 group-hover:bg-black/10"
          ></div>
          <div
            class="absolute inset-0 opacity-60 transition-all duration-500 group-hover:opacity-40"
          >
            <img
              src="/atown.jpg"
              alt="Photography"
              class="h-full w-full object-cover"
            />
          </div>
          <div class="absolute inset-0 flex flex-col justify-end p-8 md:p-10">
            <span class="mb-2 font-mono text-sm text-white/60 md:text-base"
              >03</span
            >
            <h3
              class="mb-3 text-3xl font-bold text-white transition-transform duration-300 group-hover:translate-x-2 md:text-4xl"
            >
              Photography
            </h3>
            <p class="max-w-md text-sm text-white/80 md:text-base">
              Visual storytelling through the lens
            </p>
          </div>
        </a>

        <!-- Software Banner -->
        <a
          href="/software-engineering"
          class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-xl transition-all duration-500 hover:shadow-2xl"
        >
          <div
            class="absolute inset-0 bg-gradient-to-br from-emerald-900 to-teal-900"
          ></div>
          <div
            class="absolute inset-0 bg-black/40 transition-all duration-500 group-hover:bg-black/20"
          ></div>
          <div class="absolute inset-0 flex flex-col justify-end p-8 md:p-10">
            <span class="mb-2 font-mono text-sm text-white/60 md:text-base"
              >04</span
            >
            <h3
              class="mb-3 text-3xl font-bold text-white transition-transform duration-300 group-hover:translate-x-2 md:text-4xl"
            >
              Software Engineering
            </h3>
            <p class="max-w-md text-sm text-white/80 md:text-base">
              Building web applications and interactive experiences
            </p>
            <div
              class="mt-4 flex items-center gap-3 font-mono text-sm text-white/60"
            >
              <span>&lt;/&gt;</span>
              <span>React</span>
              <span>•</span>
              <span>TypeScript</span>
              <span>•</span>
              <span>Node.js</span>
            </div>
          </div>
        </a>
      </div>
    </Container>
  </section>

  <!-- News Section - Editorial Style -->
  <section
    class="bg-stone-100 py-16 dark:bg-stone-900/50 md:py-24"
  >
    <Container>
      <div class="animate mb-12">
        <h2
          class="mb-4 text-4xl font-bold text-stone-900 dark:text-stone-100 md:text-5xl"
        >
          Latest News
        </h2>
        <div class="h-1 w-20 bg-stone-900 dark:bg-stone-100"></div>
      </div>

      <div class="animate grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-10">
        {
          newsItems.map((item, index) => (
            <Link href={`/news/${item.slug}`} class="group block">
              <article class="h-full overflow-hidden rounded-xl bg-white shadow-lg transition-all duration-500 hover:shadow-2xl dark:bg-stone-900">
                {item.data.thumbnail && (
                  <div class="relative aspect-[16/10] overflow-hidden bg-stone-200 dark:bg-stone-800">
                    <img
                      src={item.data.thumbnail}
                      alt={item.data.title}
                      class="h-full w-full object-cover grayscale transition-all duration-700 group-hover:scale-105 group-hover:grayscale-0"
                    />
                    <div class="absolute left-4 top-4">
                      <span class="inline-block rounded-full bg-stone-900/80 px-3 py-1 font-mono text-xs text-white backdrop-blur-sm dark:bg-stone-100/80 dark:text-stone-900">
                        {new Date(item.data.date).toLocaleDateString("en-US", {
                          month: "short",
                          year: "numeric",
                        })}
                      </span>
                    </div>
                  </div>
                )}
                <div class="p-6 md:p-8">
                  <h3 class="mb-3 text-xl font-bold leading-tight text-stone-900 transition-colors group-hover:text-stone-700 dark:text-stone-100 dark:group-hover:text-stone-300 md:text-2xl">
                    {item.data.title}
                  </h3>
                  <p class="text-sm leading-relaxed text-stone-600 dark:text-stone-400 md:text-base">
                    {item.data.description}
                  </p>
                  <div class="mt-4 flex items-center text-sm font-medium text-stone-700 transition-transform duration-300 group-hover:translate-x-2 dark:text-stone-300">
                    <span>Read more</span>
                    <svg
                      class="ml-2 h-4 w-4"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </div>
                </div>
              </article>
            </Link>
          ))
        }
      </div>

      <div class="animate mt-12 text-center">
        <Link
          href="/news"
          class="inline-flex items-center gap-2 rounded-full bg-stone-900 px-8 py-4 font-semibold text-white shadow-lg transition-all duration-300 hover:scale-105 hover:bg-stone-800 hover:shadow-xl dark:bg-stone-100 dark:text-stone-900 dark:hover:bg-stone-200"
        >
          View all news
          <svg
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </Link>
      </div>
    </Container>
  </section>

  <!-- Connect Section -->
  <section class="py-16 md:py-24">
    <Container>
      <div class="animate">
        <div class="mb-12">
          <h2
            class="mb-4 text-4xl font-bold text-stone-900 dark:text-stone-100 md:text-5xl"
          >
            Let's Connect
          </h2>
          <div class="h-1 w-20 bg-stone-900 dark:bg-stone-100"></div>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          <div
            class="rounded-2xl bg-gradient-to-br from-stone-100 to-stone-200 p-8 shadow-xl dark:from-stone-900 dark:to-stone-800 md:p-10"
          >
            <h3
              class="mb-4 text-2xl font-bold text-stone-900 dark:text-stone-100"
            >
              Get in touch
            </h3>
            <p
              class="mb-6 text-lg leading-relaxed text-stone-700 dark:text-stone-300"
            >
              Interested in collaborating on creative projects or discussing
              opportunities? Let's talk.
            </p>
            <Link
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.TITLE}`}
              class="group inline-flex items-center gap-2 text-xl font-semibold text-stone-900 transition-colors hover:text-stone-700 dark:text-stone-100 dark:hover:text-stone-300"
            >
              <svg
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              {SITE.EMAIL}
            </Link>
          </div>

          <div
            class="rounded-2xl bg-gradient-to-br from-stone-100 to-stone-200 p-8 shadow-xl dark:from-stone-900 dark:to-stone-800 md:p-10"
          >
            <h3
              class="mb-4 text-2xl font-bold text-stone-900 dark:text-stone-100"
            >
              Find me online
            </h3>
            <div class="flex flex-col gap-4">
              {
                SOCIALS.map((SOCIAL) => (
                  <Link
                    href={SOCIAL.HREF}
                    external
                    aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                    class="group inline-flex items-center gap-3 text-lg font-medium text-stone-700 transition-colors hover:text-stone-900 dark:text-stone-300 dark:hover:text-stone-100"
                  >
                    <svg
                      class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                    {SOCIAL.NAME}
                  </Link>
                ))
              }
              <Link
                href="/rss.xml"
                aria-label="Scott Lingner RSS feed"
                class="group inline-flex items-center gap-3 text-lg font-medium text-stone-700 transition-colors hover:text-stone-900 dark:text-stone-300 dark:hover:text-stone-100"
              >
                <svg
                  class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
                RSS Feed
              </Link>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>
