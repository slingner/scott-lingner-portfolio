---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
import BackToTop from "@components/BackToTop.astro";
---

<footer class="animate border-t border-cyan-200/50 dark:border-cyan-800/50 bg-gradient-to-b from-transparent to-cyan-50/30 dark:to-cyan-950/30">
  <Container>
    <div class="relative">
      <div class="absolute -top-12 right-0">
        <BackToTop />
      </div>
    </div>
    <div class="flex items-center justify-between">
      <div class="text-slate-700 dark:text-slate-300">
        &copy; {new Date().getFullYear()} â€¢ <span class="font-semibold bg-gradient-to-r from-cyan-600 to-blue-600 dark:from-cyan-400 dark:to-blue-400 bg-clip-text text-transparent">{SITE.TITLE}</span> ðŸŒŠ
      </div>

      <div class="flex flex-wrap items-center gap-1.5">
        <button
          id="light-theme-button"
          aria-label="Light theme"
          class="group flex size-9 items-center justify-center rounded-full border border-cyan-300/50 hover:bg-cyan-100 focus-visible:bg-cyan-100 dark:border-cyan-700/50 dark:hover:bg-cyan-900/50 dark:focus-visible:bg-cyan-900/50 transition-all"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="transition-colors duration-300 ease-in-out stroke-amber-500 dark:stroke-amber-400 group-hover:animate-pulse group-hover:scale-110"
          >
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
        </button>
        <button
          id="dark-theme-button"
          aria-label="Dark theme"
          class="group flex size-9 items-center justify-center rounded-full border border-cyan-300/50 hover:bg-cyan-100 focus-visible:bg-cyan-100 dark:border-cyan-700/50 dark:hover:bg-cyan-900/50 dark:focus-visible:bg-cyan-900/50 transition-all"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="transition-colors duration-300 ease-in-out stroke-indigo-600 dark:stroke-indigo-400 group-hover:animate-pulse group-hover:scale-110"
          >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
        <button
          id="system-theme-button"
          aria-label="System theme"
          class="group flex size-9 items-center justify-center rounded-full border border-cyan-300/50 hover:bg-cyan-100 focus-visible:bg-cyan-100 dark:border-cyan-700/50 dark:hover:bg-cyan-900/50 dark:focus-visible:bg-cyan-900/50 transition-all"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="transition-colors duration-300 ease-in-out stroke-cyan-600 dark:stroke-cyan-400 group-hover:animate-pulse group-hover:scale-110"
          >
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
        </button>
      </div>
    </div>
  </Container>
</footer>
